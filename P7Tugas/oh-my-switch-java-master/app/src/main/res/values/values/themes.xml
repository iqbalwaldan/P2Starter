<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OhMySwitch" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/gray_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_light</item>
        <item name="colorSecondaryVariant">@color/red_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

	<style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
		<item name="android:windowBackground">@color/gray</item>
	</style>

	<style name="SplashScreenText">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">32sp</item>
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="SplashScreenLine">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">4dp</item>
		<item name="android:layout_marginTop">8dp</item>
		<item name="android:layout_marginStart">8dp</item>
		<item name="android:layout_marginEnd">8dp</item>
		<item name="android:layout_marginBottom">8dp</item>
		<item name="android:background">@color/white</item>
	</style>

	<style name="TextContent">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginStart">8dp</item>
		<item name="android:layout_marginTop">4dp</item>
		<item name="android:layout_marginEnd">8dp</item>
	</style>

	<style name="TextTitle" parent="TextContent">
		<item name="android:textSize">28sp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="TextSubtitle" parent="TextContent">
		<item name="android:textSize">20sp</item>
	</style>

	<style name="ImageContent">
		<item name="android:layout_marginStart">8dp</item>
		<item name="android:layout_marginTop">8dp</item>
		<item name="android:layout_marginEnd">8dp</item>
		<item name="android:layout_marginBottom">8dp</item>
	</style>

	<style name="CardContainer">
		<item name="android:padding">8dp</item>
		<item name="cardCornerRadius">8dp</item>
		<item name="cardElevation">8dp</item>
		<item name="cardPreventCornerOverlap">true</item>
		<item name="cardUseCompatPadding">true</item>
	</style>

</resources>